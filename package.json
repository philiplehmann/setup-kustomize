{
  "name": "setup-kustomize",
  "description": "Github action to setup kustomize",
  "license": "MIT",
  "version": "2.2.0",
  "main": "lib/main.js",
  "author": "Philip Lehmann",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "format": "yarn biome format --write src/",
    "format-check": "yarn biome format src/",
    "lint": "yarn biome lint src/",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest",
    "all": "yarn format && yarn build && yarn package",
    "release": "yarn all && gh release create \"$(npm version patch --git-tag-version=false)\" -t Release -d=false -n \"\" -p=false && git add -A && git commit -m=\"Release\" && git push origin main && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philiplehmann/setup-kustomize.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "@octokit/plugin-throttling": "^8.1.3",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.11.19",
    "@types/semver": "^7.5.7",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "packageManager": "yarn@4.1.0"
}